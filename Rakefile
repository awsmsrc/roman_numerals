task default:[:run]
require './roman_numeral.rb'

task :run do
  g = RomanNumeral.new
  puts "Roman Numeral for 1: #{g.generate(1)}"
  puts "Roman Numeral for 5: #{g.generate(5)}"
  puts "Roman Numeral for 10: #{g.generate(10)}"
  puts "Roman Numeral for 20: #{g.generate(20)}"
  puts "Roman Numeral for 3999: #{g.generate(3999)}"
end
